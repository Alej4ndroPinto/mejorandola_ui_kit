.progress
  background: athens-gray
  border-radius: 13px
  height: em(20px)
  margin: em(16px)
  overflow: hidden
  position: relative

  +element(state)
    set-background-modifier(ui-colors)

  +element(count)
    &
      @extends $progress-count

[class^="progress__state"]
  @extends $progress-state
