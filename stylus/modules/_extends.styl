// Extends

// Buttons
$btn
  border-radius: br--default
  color: white !important
  display: inline-block
  font-size: em(14px)
  font-weight: font-weight--normal
  margin: em(8px) 
  padding: 1rem 2rem 13px 2rem
  text-transform: uppercase
  transition: border-color trns-duration, opacity trns-duration
  width: 100%

  +media-query('medium')
    width: auto
  
  &:hover
    border-color: transparent
    opacity: .75
    

// Nav items
$nav-item-display
  display: inline-block
  margin: 0 .5px 

$nav-item-link
  color: white
  display: block
  font-size: 14px
  font-weight: font-weight--light
  padding: .9em 2.5em
  text-decoration: none
  transition all trns-duration ease
  
