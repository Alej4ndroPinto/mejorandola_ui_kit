// Import if google fonts url is defined
if font-url--google is defined
  @import url(font-url--google)

// Calculate em values
em(target, context = base__font-size) 
  unit(target/context, 'em') // convert px a em

// Grid system functions

grid-context(grid-col-width, grid-col-count, grid-gutter-width) 
  grid-context = (grid-col-width * grid-col-count) + (grid-gutter-width * (grid-col-count - 1))
