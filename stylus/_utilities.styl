// Utilities

// Import if google fonts url is defined
if font-url--google is defined
  @import url(font-url--google)

// Calculate em values
em(target, context = base__font-size) 
  unit(target/context, 'em') // convert px a em

  // Mixins
bg-colors(hash) 
  for key, value in hash //iterating an object(hash)
    &--{key} // interpolation, print the value in the selector
      background value
